<div class="row">
  <div class="span12">
    <h3><strong><%= "#{company.name}" %></strong>
    <%= link_to image_tag("external.gif", alt: "link"), company.website, class: 'web_link', target: '_blank' %></h3>
    <p><%= raw company.about %></p>
    <p><%= raw "They've helped to save #{pluralize(number_with_delimiter(company.trees, delimiter: ','), 'tree')}, #{pluralize(number_with_delimiter(company.water, delimiter: ','), 'gallon')} of water, and #{number_with_delimiter(company.electricity, delimiter: ',')} kW&#8226;h of electricity." %></p>
    <%= link_to 'View Case Study', company, class: 'btn btn-large btn-info' %>
    <%= link_to 'Testimonial', testimonials_path, class: 'btn btn-large' %><br/>
  </div>
</div>
<br/>