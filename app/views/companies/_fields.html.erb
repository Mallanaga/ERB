<%= render 'shared/error_messages', object: f.object %>
<div class='col-md-3 col-md-offset-1'>
  <div class='well'>
    <div class='form-group'>
      <%= f.label :name, "Name of Company" %>  
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= f.label :website, "Website (include http://)" %>
      <%= f.text_field :website, class: 'form-control' %>
    </div>
  </div>
  <div>
    <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <%= button_tag "Reset", type: :reset, class: "btn" %>
    <%= link_to "Add Company", new_company_path, class: "btn" %>
  </div>
</div>
<div class='col-md-7'>
  <div class='row'>
    <div class='col-md-6 form-group'>
      <%= f.label :about, "About (use HTML)" %>
      <%= f.text_area :about, class: 'form-control' %>
    </div>
    <div class='col-md-6 form-group'>
      <%= f.label :testimonial, "Testimonial (use HTML)" %>
      <%= f.text_area :testimonial, class: 'form-control' %>
    </div>
  </div>
</div>