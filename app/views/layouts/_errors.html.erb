 <div class='container'>
  <div class='row'>
    <div class='col-md-8 col-md-offset-2'>
      <% flash.each do |key, value| %>
        <div class="alert <%= flash_class(key) %>">
          <%= button_tag('&times;'.html_safe, class: 'close', data: {dismiss: 'alert'}, 'aria-hidden' => 'true') %>
          <%= value %>
        </div>
      <% end %>
    </div>
  </div>
</div>