<div class='tab-pane fade' id='orders'>
  <div class='row'>
    <div class="col-md-3 col-md-offset-1 well">
      <table class="table table-striped">
        <thead><h2>Order History</h2></thead>
        <tbody>
          <tr><td><strong>Totals</strong></td></tr>
          <tr><td>Orders: <%= @orders.size %></td></tr>
        </tbody>
      </table>
      <%= link_to 'Add Order', new_order_url(company_id: @company.id), class: 'btn btn-success' if admin? %>
    </div>
    <div class="col-md-7">
      <table class="table table-striped table-bordered">
        <tr>
          <th>Invoice #</th>
          <th>Date ordered</th>
          <th>Date delivered</th>
          <th>Paid</th>
        </tr>
        <%- @orders.each do |o| %>
          <tr>
            <td><%= link_to o.invoice, o, target: '_blank' %></td>
            <td><%= o.ordered_on %></td>
            <td><%= o.delivered_on %></td>
            <td><%= o.paid ? "Yes" : "No" %></td>
          </tr>
        <%- end %>
      </table>
    </div>
  </div>
</div>
