<% provide(:title, "#{current_user.name}") %>
<div class="headercontent">
  <div class="row">
    <div class="span6">
      <h1><%= link_to "#{@company.name}", @company %></h1>
      <h2><%= current_user.name %></h2>
    </div>

    <% if current_user.admin? %>
      <div class="span6">
        <div class="btn-group pull-right">
          <%= form_for user_path(current_user), html: {class: 'submit_on_change'}, method: 'get' do |f| %>
            <%= f.label "Select Company" %>
            <%= f.collection_select :company_id, @companies, :id, :name,
                                    {selected: @selected_company}, { name: "company_id" } %>
          <% end %>
        </div>
      </div>
    <% end %>
    
    <div class="span12">
      <ul class="nav nav-tabs" id='myTab'>
        <li class='active'><a href="#overview">Resource Savings</a></li>
        <li><a href="#roi">Cost Savings</a></li>
        <li><a href="#boxes">Boxes</a></li>
        <li><a href="#orders">Orders</a></li>
        <li><a href="#snippet">Snippet</a></li>
        <% if current_user.admin? %>
          <li><a href="#company_info">Company Info</a></li>
          <li><a href="#add_user">Add User</a></li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class='tab-content'>
    <%= render 'overview' %>
    <%= render 'roi' %>
    <%= render 'manage_boxes' %>
    <%= render 'orders' %>
    <%= render 'snippet' %>
    <% if current_user.admin? %>
      <%= render 'companies/edit' %>
      <%= render 'new' %>
    <% end %>
  </div>
</div>

<script>
  $('#myTab a').click(function (e) {
    e.preventDefault();
    $(this).tab('show');
  });

  $("form.submit_on_change").each(function(idx,form){
    $(form).find("select,input").each(function(idx,element){
      $(element).change(function(){
        $(form).submit();
        return false;
      });
    });
  });
  $('.dropdown.sixth').addClass('active');
</script>